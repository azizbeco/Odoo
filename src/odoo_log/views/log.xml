<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="log_list" model="ir.ui.view">
        <field name="name">Log</field>
        <field name="model">odoo_log.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="username"/>
                <field name="message"/>
            </list>
        </field>
    </record>

    <record id="log_form" model="ir.ui.view">
        <field name="name">Log</field>
        <field name="model">odoo_log.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="username"/>
                        <field name="message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="log_action" model="ir.actions.act_window">
        <field name="name">Log</field>
        <field name="res_model">odoo_log.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_root" name="Test" action="log_action"/>
    <menuitem id="menu_root_log" name="Log" parent="menu_root" action="log_action"/>

</odoo>