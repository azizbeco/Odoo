<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_list" model="ir.ui.view">
        <field name="name">Mahsulot</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="price"/>
                <field name="quantity"/>
            </list>
        </field>
    </record>

    <record id="product_form" model="ir.ui.view">
        <field name="name">Mahsulot</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="quantity"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_action" model="ir.actions.act_window">
        <field name="name">Mahsulot</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_root" name="Test" action="product_action"/>
    <menuitem id="menu_root_product" name="Mahsulot" parent="menu_root" action="product_action"/>

</odoo>